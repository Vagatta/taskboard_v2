# Variables de entorno para Taskboard

# Supabase
REACT_APP_SUPABASE_URL=tu_url_de_supabase
REACT_APP_SUPABASE_ANON_KEY=tu_clave_anonima_de_supabase

# Configuración SMTP para Gmail
# IMPORTANTE: Genera una contraseña de aplicación en https://myaccount.google.com/security
REACT_APP_SMTP_HOST=smtp.gmail.com
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_USER=tu-email@gmail.com
REACT_APP_SMTP_PASS=tu-contraseña-de-aplicación-gmail

# URL base de la aplicación
REACT_APP_BASE_URL=http://localhost:3000
